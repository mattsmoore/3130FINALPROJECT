<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swg7.dalpolls">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VoterMainActivity"></activity>
        <activity android:name=".NewAnswer" />
        <activity android:name=".AnswerPreview"></activity>
        <activity android:name=".ElectionPreview" />
        <activity
            android:name=".NewQuestion"
            android:label="activity_new_question"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewElection"
            android:label="@string/title_activity_new_election"
            android:parentActivityName=".Admin_page"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swg7.dalpolls.Admin_page" />
        </activity>
        <activity
            android:name=".Admin_page"
            android:label="@string/title_activity_admin_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>